{
  "compilerOptions": {
    "target": "ES2020", // Slightly newer than ES6; good for Node 14+
    "module": "commonjs",
    // "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true, // Allows default imports from CommonJS modules
    "strict": true, // Enables all strict type-checking options
    "skipLibCheck": true, // Skip type checks of declaration files for faster builds
    "forceConsistentCasingInFileNames": true, // Helps with case-sensitive filesystems
    "allowArbitraryExtensions": null
  }
}
